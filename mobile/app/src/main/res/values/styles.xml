<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="projection_button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="seat" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="icon">@drawable/free_sit</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">25dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="free_seat" parent="seat">
        <item name="iconTint">@color/white</item>
    </style>
    <style name="taken_seat" parent="seat">
        <item name="iconTint">@color/gray</item>
    </style>
    <style name="selected_seat" parent="seat">
        <item name="iconTint">@color/yellow</item>
    </style>
</resources>
